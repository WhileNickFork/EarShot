# EarShot Environment Configuration
# Copy this file to .env and configure for your setup

# ==============================================================================
# LLM Configuration (REQUIRED)
# ==============================================================================
# OpenAI-compatible endpoint (Ollama, LM Studio, etc.)
LLM_BASE_URL=http://localhost:11434/v1
LLM_MODEL=gemma2:2b
LLM_TIMEOUT_SEC=10

# ==============================================================================
# Audio Settings
# ==============================================================================
SAMPLE_RATE=16000
FRAME_MS=20

# ==============================================================================
# Voice Activity Detection
# ==============================================================================
VAD_MIN_SPEECH_MS=250
VAD_MAX_SILENCE_MS=400
SILERO_MODEL_PATH=models/silero_vad.onnx

# ==============================================================================
# Speech Recognition (Vosk)
# ==============================================================================
VOSK_MODEL=vosk-model-small-en-us-0.15

# ==============================================================================
# Intent Classification
# ==============================================================================
INTENT_MODEL_PATH=models/all-MiniLM-L6-v2
INTENT_THRESHOLD=0.28

# ==============================================================================
# Context Window (Rolling Buffer)
# ==============================================================================
CONTEXT_PRE_SEC=10
CONTEXT_POST_SEC=15

# ==============================================================================
# Display Settings
# ==============================================================================
DISPLAY_ENABLED=true
DISPLAY_MAX_CHARS=220

# ==============================================================================
# GPS/Location
# ==============================================================================
GPS_POLL_SEC=2

# ==============================================================================
# Development Settings
# ==============================================================================
SIMULATION_MODE=false
LOG_LEVEL=INFO

# ==============================================================================
# Directory Paths (Optional - defaults to ~/.earshot)
# ==============================================================================
# EARSHOT_HOME=~/.earshot
# EARSHOT_MODELS_DIR=./models
# LOG_DIR=~/.earshot/logs
